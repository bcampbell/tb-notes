+      ":notAPhishMessage"
+      ")");
+  NS_ENSURE_STATE(stmt);
+
+  nsresult rv = stmt->BindUTF8StringByName("messageID"_ns, msg.messageID);
+  if (NS_FAILED(rv)) return rv;
