+  nsresult rv = stmt->BindUTF8StringByName("storeToken"_ns, storeToken);
+  NS_ENSURE_SUCCESS(rv, rv);
+  rv = stmt->BindInt64ByName("msgKey"_ns, (int64_t)key);
+  NS_ENSURE_SUCCESS(rv, rv);
+  rv = stmt->Execute();
+  NS_ENSURE_SUCCESS(rv, rv);
+  return NS_OK;
+}
