+  NS_ENSURE_SUCCESS(rv, rv);
+  msgs.Clear();
+  while (1) {
+    bool exists;
+    rv = stmt->ExecuteStep(&exists);
+    NS_ENSURE_SUCCESS(rv, rv);
+    if (!exists) {
+      break;
+    }
+    int64_t tmp;
+    rv = stmt->GetInt64(0, &tmp);
+    NS_ENSURE_SUCCESS(rv, rv);
+    msgs.AppendElement((nsMsgKey)tmp);
+  }
+  return NS_OK;
+}
